<Window x:Class="DJBroker.WindowApp.Popup.PopupChat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat" Height="300" Width="400" WindowStartupLocation="CenterOwner">
    <Grid>
        <RichTextBox x:Name="richTextBox" HorizontalAlignment="Left" Height="224" Margin="10,10,0,0" VerticalAlignment="Top" Width="374" ScrollViewer.VerticalScrollBarVisibility="Visible" IsReadOnly="True">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <TextBox x:Name="MessageTextBox" HorizontalAlignment="Left" Height="23" Margin="10,236,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="287" />
        <Button x:Name="SendButton" Content="Send" HorizontalAlignment="Left" Margin="307,239,0,0" VerticalAlignment="Top" Width="75" IsDefault="True" Click="SendButton_Click"/>
    </Grid>
</Window>
